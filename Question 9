#Write a python program that checks if a substring is present in a given string.
def check_substring(main_string, substring):
    if substring in main_string:
        return True
    else:
        return False

main_string = "Hello, World!"
substring1 = "Hello"
substring2 = "Python"

if check_substring(main_string, substring1):
    print(f"'{substring1}' is present in '{main_string}'")
else:
    print(f"'{substring1}' is not present in '{main_string}'")

if check_substring(main_string, substring2):
    print(f"'{substring2}' is present in '{main_string}'")
else:
    print(f"'{substring2}' is not present in '{main_string}'")
